{
"variables": {
    "AWS_ACCESS_KEY_ID": "",
    "AWS_SECRET_ACCESS_KEY": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "bin/os.sh",
            "bin/docker.sh",
            "bin/dcos-deps.sh",
            "bin/vagrant.sh",
            "bin/virtualbox.sh",
            "bin/cleanup.sh",
            "bin/zerodisk.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "bin/os.sh",
            "bin/docker.sh",
            "bin/dcos-deps.sh",
            "bin/vagrant.sh",
            "bin/cleanup.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "dcos-centos-virtualbox.box"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "5s",
      "disk_size": 10520,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "4c6c65b5a70a1142dadb3c65238e9e97253c0d3a",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.liquidweb.com/CentOS/7/isos/x86_64/CentOS-7-x86_64-DVD-1511.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `AWS_ACCESS_KEY_ID`}}",
      "secret_key": "{{user `AWS_SECRET_ACCESS_KEY`}}",
      "region": "us-west-2",
      "source_ami": "ami-d440a6e7",
      "instance_type": "t2.small",
      "security_group_id": "sg-27423242",
      "ssh_username": "centos",
      "ami_name": "dcos-centos {{timestamp}}",
      "ami_block_device_mappings": [{
        "device_name": "/dev/sda1",
        "delete_on_termination": true
      }],
      "launch_block_device_mappings": [{
        "device_name": "/dev/sda1",
        "delete_on_termination": true
      }]
    }
  ]
}


# -*- mode: ruby -*-
# vi: set ft=ruby :


## BASE OS
##############################################

BOX_NAME = "karlkfi/dcos-centos-virtualbox"


#### Setup & Provisioning
##############################################

Vagrant.configure(2) do |config|
  config.vm.define "dcos-centos-virtualbox" do |vm_cfg|
    vm_cfg.vm.box = BOX_NAME

    vm_cfg.vm.provider "virtualbox" do |v|
      v.name = "dcos-centos-virtualbox"
      v.cpus = 2
      v.memory = 2048
    end
  end
end

################# END ######################

__END__

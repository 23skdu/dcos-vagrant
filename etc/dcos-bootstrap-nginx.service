[Unit]
Description=DCOS Boostrap Nginx Docker
After=docker.service
Requires=docker.service

[Service]
Restart=always
ExecStart=/usr/bin/docker run -p 8888:80 -v /var/tmp/dcos:/usr/share/nginx/html --name dcos_bootstrap_nginx nginx
ExecStop=/usr/bin/docker stop -t 2 dcos_bootstrap_nginx ; /usr/bin/docker rm -f dcos_bootstrap_nginx

[Install]
WantedBy=multi-user.target
